<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/muller"/>

        <TextView
            android:id="@+id/question_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muller"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/player_image"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/player_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muller"
            android:layout_below="@+id/question_player"
            android:layout_toRightOf="@+id/player_image"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/question_isTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/muller_true"
            android:layout_below="@+id/question_player"
            android:textSize="1sp"
            android:textColor="#FFFFFF"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>